<?xml version = "1.0" encoding = "utf-8" ?>
<component name="BaseScreen" extends="Group">

    <interface>            
        <!--
            This function is called before the isActive flag is set allowing the application
            do do any work before the screen becomes active
        -->
        <function name="onScreenWillShow" />

        <!--
            This function is called before the isActive flag is set allowing the application
            do do any work before the screen becomes inactive
        -->
		<function name="onScreenWillHide" />

        <!--
        This function is called when the screen is ready to become active
        -->
        <function name="isActive" />
    </interface>

    <script type="text/brightscript" uri="baseScreen.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/keycodes.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/ui.brs" />
    <script type="text/brightscript" uri="pkg:/source/steg/type.brs" />
</component>
